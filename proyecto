# interfaz grÃ¡fica

import tkinter
import random
juego = tkinter.Tk()
juego.title("Piedra, papel o tijeras!!")
juego.geometry("400x400")
juego.configure(bg="#50A8BF")
saludo = tkinter.Label(juego,text="Bienvenido a piedra, papel o tijeras", bg="red")
puntaje_jugador = 0
puntaje_comptuador = 0

marco= tkinter.LabelFrame(juego, text= "Rock Paper Scissor", font= ('Century 20 bold'),labelanchor= "n",bd=5,bg= "khaki3",width= 500, height= 350, cursor= "spider")
marco.grid(padx=100, pady=100)

#labels jugador y computador
l1= tkinter.Label(marco, text="Jugador", font= ('Helvetica 18 bold'))
l1.place(relx= .18, rely= .1)

l2= tkinter.Label(marco, text="Computador", font= ('Helvetica 18 bold'))
l2.place(relx= .45, rely= .1)

l3= tkinter.Label(marco, text="", font="Helvetica 18 bold")
l3.place(relx= .65, rely=.1)

# funciones para cada opciÃ³n
def scissors():
   value = computadora
   if value == "piedra":
      match_result = "Perdiste"
   elif value == "tijeras":
      match_result = "Empate"
   else:
      match_result = "Ganaste!!"
   l1.config(text = "tijeras")
   l2.config(text = value)
   l3.config(text = match_result)
   boton_disable()


def paper():
   value = computadora
   if value == "tijeras":
      match_result = "Perdiste"
   elif value == "papel":
      match_result = "Empate"
   else:
      match_result = "Ganaste!!"
   l1.config(text = "papel")
   l2.config(text = value)
   l3.config(text = match_result)
   boton_disable()

def rock():
   value = computadora
   if value == "papel":
      match_result = "Perdiste"
   elif value == "piedra":
      match_result = "Empate"
   else:
      match_result = "Ganaste!!"
   l1.config(text = "piedra")
   l2.config(text = value)
   l3.config(text = match_result)
   boton_disable()

def reset():
    boton_tijeras.config(state= "active")
    boton_papel.config(state= "active")
    boton_piedra.config(state= "active")
    l1.config(text = "Jugador")
    l2.config(text = "Computadora")
    l3.config(text="")

#botones de cada opcion
boton_tijeras = tkinter.Button(juego, text="TIJERAS âœ‚", highlightbackground="yellow",pady="5",command=scissors)
boton_piedra = tkinter.Button(juego, text="PIEDRA ðŸª¨", bg="red",highlightbackground="yellow",pady="5",command=rock)
boton_papel = tkinter.Button(juego, text="PAPEL ðŸ“„", bg="red",highlightbackground="yellow",pady="5",command=paper)
boton_reset = tkinter.Button(juego,text="RESET", fg="red", command=reset)

boton_tijeras.place(relx= .58, rely= .62)
boton_piedra.place(relx=.25, rely= .62)
boton_papel.place(relx= .41,rely= .62)
boton_reset.place(relx=.8, rely=.62)


opciones=["piedra","papel","tijeras"]
computadora = random.choice(opciones)


#desactivar los botones despues de cada partida
def boton_disable():
   boton_papel.config(state= "disabled")
   boton_piedra.config(state= "disabled")
   boton_tijeras.config(state= "disabled")


juego.mainloop()
