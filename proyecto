# interfaz grÃ¡fica

import tkinter
import random
juego = tkinter.Tk()
juego.title("Piedra, papel o tijeras!!")
juego.geometry("400x400")
juego.configure(bg="#50A8BF")
saludo = tkinter.Label(juego,text="Bienvenido a piedra, papel o tijeras", bg="red")
puntaje_jugador = 0
puntaje_comptuador = 0

marco= tkinter.LabelFrame(juego, text= "Rock Paper Scissor", font= ('Century 20 bold'),labelanchor= "n",bd=5,bg= "khaki3",width= 600, height= 450, cursor= "target")
marco.grid(padx=100, pady=100)

#labels jugador y computador
l1= tkinter.Label(marco, text="Player", font= ('Helvetica 18 bold'))
l1.place(relx= .18, rely= .1)

l3= tkinter.Label(marco, text="Computer", font= ('Helvetica 18 bold'))
l3.place(relx= .65, rely= .1)

# funciones para cada opciÃ³n
def tijeras():
   value = computadora()
   if value == "piedra":
      match_result = "Perdiste"
   elif value == "tijeras":
      match_result = "Empate"
   else:
      match_result = "Ganaste!!"
   #label.config(text = match_result)
   l1.config(text = "tijeras")
   l3.config(text = value)
   button_disable()


def papel():
   value = computadora()
   if value == "tijeras":
      match_result = "Perdiste"
   elif value == "papel":
      match_result = "Empate"
   else:
      match_result = "Ganaste!!"
   #label.config(text = match_result)
   l1.config(text = "papel")
   l3.config(text = value)
   button_disable()

def piedra():
   value = computadora()
   if value == "papel":
      match_result = "Perdiste"
   elif value == "piedra":
      match_result = "Empate"
   else:
      match_result = "Ganaste!!"
   #label.config(text = match_result)
   l1.config(text = "piedra")
   l3.config(text = value)
   button_disable()

def reset():
    boton_tijeras.config(state= "active")
    boton_papel.config(state= "active")
    boton_piedra.config(state= "active")
    l1.config(text = "Player")
    l3.config(text = "Computer")
    #label.config(text = "")

#problema con los colores en macOS
#botones de cada opcion
boton_tijeras = tkinter.Button(juego, text="TIJERAS âœ‚", highlightbackground='red',activebackground="purple",fg="brown",pady="5",command=tijeras)
boton_piedra = tkinter.Button(juego, text="PIEDRA ðŸª¨", bg="red",activebackground="purple",fg="green",pady="5",command=piedra)
boton_papel = tkinter.Button(juego, text="PAPEL ðŸ“„", bg="red",activebackground="purple",fg="purple",pady="5",command=papel)
boton_reset = tkinter.Button(juego,text="RESET", fg="white", command=reset)

boton_tijeras(relx= .58, rely= .62)
boton_piedra.place(relx=.25, rely= .62)
boton_papel(relx= .41,rely= .62)

#boton_tijeras.grid(row=1,column=0)
#boton_piedra.grid(row=1,column=1)
#boton_papel.grid(row=1,column=2)
#saludo.grid(row=0,column=1)


opciones=["piedra","papel","tijeras"]
computadora = random.choice(opciones)


#desactivar los botones despues de cada partida
def button_disable():
   boton_papel.config(state= "disabled")
   boton_piedra.config(state= "disabled")
   boton_tijeras.config(state= "disabled")


juego.mainloop()

